<!-- app/views/suppliers/index.html.erb -->

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.location %></td>
        <td><%= link_to 'Voir', supplier %></td>
        <td><%= link_to "Editer", edit_supplier_path(supplier) if policy(supplier).update? %></td>
        <td><%= link_to "Supprimer", supplier, method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce fournisseur ?" } if policy(supplier).destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Nouveau Fournisseur", new_supplier_path if policy(Supplier).create? %>
<%= link_to 'Materials', materials_path %>
