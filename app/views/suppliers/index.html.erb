
  <div class="flex flex-col ">
    <h1 class="font-bold text-4xl text-center">Fournisseurs</h1>

    <p class="fa fa-bars text-center">Tous les fournisseurs que vous avez trouvés qui distribuent les matériaux écologiques</p>

    <%= button_to "Ajouter un Fournisseur", new_supplier_path, method: :get,
      class:"bg-green-600 rounded-md grow-0 mt-2 mb-3 py-2 px-4 font-semibold rounded-lg shadow-md text-white bg-green-500 hover:bg-green-700" if policy(Supplier).create? %>

  </div>
  <!--  Card Container -->
  <div class="container grid grid-cols-1 md:grid-cols-2 gap-4 justify-center w-full ">
    <% @suppliers.each do |supplier| %>
      <!-- Carte  -->
      <a href="<%=supplier_path(supplier)%>" class="card-link">
        <div class="flex flex-col sm:flex-row justify-between sm:justify-start  bg-white p-2 w-full shadow-md rounded-md overflow-hidden sm:h-36 ">
          <!-- Image -->
          <div class="aspect-square flex-none w-25 ">
            <% if supplier.image.attached? %>
              <%= cl_image_tag supplier.image.key, alt: "Logo", class: "w-full h-full"%>
            <% else %>
              <%= image_tag "placeholder.svg", alt: "Photo", class: "w-full h-full" %>
            <% end %>
          </div>

          <!-- Contenu -->
          <div class="grow flex flex-row justify-between ">
            <!-- Nom et description du fournisseur -->
            <div class="flex flex-col grow-1 shrink-1 p-4 md:w-2/3">
              <h2 class="text-lg font-semibold"><%= supplier.name %></h2>
              <p class="text-sm text-gray-600"><%= supplier.location %></p>
            </div>
            <% if current_user%>
              <div class="flex flex-col justify-center">
                <!-- helpers -->
                <%= link_edit_supplier(supplier) %>
                <%= link_destroy_supplier(supplier) %>
              </div>
            <% end %>
          </div>
        </div>
      </a>
    <% end %>
  </div>
</div>
