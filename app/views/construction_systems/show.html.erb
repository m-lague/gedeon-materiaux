<%=turbo_frame_tag "content" do %>
  <p id="notice"><%= notice %></p>

   <div class="static  max-h-screen overflow-hidden z-10 text-center">
    <h2 class="absolute top-1/3 text-slate-100 z-50 w-full text-4xl font-bold uppercase">
      <%= @construction_system.name %>
    </h2>
    <% if @construction_system.image.attached? %>
      <%= cl_image_tag @construction_system.image.key, class: " brightness-50 w-auto", alt: "Photo"%>
    <% else %>
      <%= image_tag "placeholder.svg", alt: "Photo", class: "w-full h-full" %>
    <% end %>
  </div>

  <div class="flex flex-col sm:flex-row container mx-auto">
    <div>
      <div>Propriétés :</div>
      
      <h2>Matériaux du système constructif :</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 justify-center w-full ">
        <%= render @construction_system.materials%>
      </div>
    </div>
    <div class="grow">
      <p><%= @construction_system.description %></p>
    </div>
  </div>


  <div class="text-start">

    <% if @construction_system.image.attached? %>
      <%= cl_image_tag @construction_system.image.key %>
    <% end %>

    <h2><%= @construction_system.name %></h2>

    <p class="description">
      Description:
      <%= @construction_system.description %>
    </p>

  </div>

  <h2>Matériaux du système constructif:</h2>

 <div class="grid grid-cols-1 md:grid-cols-2 gap-4 justify-center w-full ">
    <%= render @construction_system.materials%>
  </div>

  <%= link_to "Editer", edit_construction_system_path(@construction_system) if policy(@construction_system).update? %>
  <%= link_to 'Back', :back%>
<%end%>
